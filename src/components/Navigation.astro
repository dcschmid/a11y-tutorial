---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems } from 'astro-navbar'
import ThemeIcon from './ThemeIcon.astro'
---

<Astronav>
  <nav class="navigationRoot">
    <a href="/">A11y Tutorials</a>
    <ThemeIcon />
    <div class="menuIconRoot">
      <MenuIcon class="menuIcon" />
    </div>
    <MenuItems class="menuItems">
      <ul class="navigation">
        <li>
          <Dropdown class="group">
            <button class="dropdownButton">
              <span>Tutorials</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="dropdownSvg"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="dropdownItemsRoot">
              <div class="dropdownItems">
                <ul>
                  <li><a href="/tutorials/grundlagen/1-einleitung">Grundlagen</a></li>
                  <li>Richtlinien</li>
                  <li>Gesetze</li>
                  <li>Mythen und Missverst√§ndnisse</li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
      </ul>
    </MenuItems>
  </nav>
</Astronav>

<style lang="scss">
  .navigationRoot {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .menuIconRoot {
    display: block;
    align-items: center;

    @media screen and (min-width: 1024px) {
      display: none;
    }
  }

  .menuIcon {
    widht: 1rem;
    height: 1rem;
  }

  .menuItems {
    display: none;

    @media screen and (min-width: 1024px) {
      display: flex;
    }
  }

  .navigation {
    display: flex;
    flex-direction: column;

    @media screen and (min-width: 1024px) {
      flex-direction: row;
      gap: 1.25rem;
    }
  }

  .dropdown {
    position: relative;
  }

  .dropdownButton {
    display: flex;
    align-items: center;
  }

  .dropdownSvg {
    width: 0.75rem;
    height: 0.75rem;
  }

  .dropdownItemsRoot {
    position: relative;

    &.hidden {
      display: none;
    }
  }

  dropdownItems {
    position: absolute;
  }
</style>
