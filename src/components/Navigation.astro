---
import { Astronav } from 'astro-navbar'
import Logo from './Logo.astro'
import Search from 'astro-pagefind/components/Search'
---

<Astronav>
  <nav class="navigationRoot">
    <a class="navigationLogo" href="/"><Logo /></a>
    <Search />
  </nav>
</Astronav>

<style lang="scss">
  .navigationRoot {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }

  .navigationLogo {
    height: 45px;
    width: 150px;
  }

  .menuIconRoot {
    display: block;
    align-items: center;

    @media screen and (min-width: 1024px) {
      display: none;
    }
  }

  .menuIcon {
    widht: 1rem;
    height: 1rem;
  }

  .menuItems {
    display: none;

    @media screen and (min-width: 1024px) {
      display: flex;
    }
  }

  .navigation {
    display: flex;
    flex-direction: column;
    list-style: none;

    @media screen and (min-width: 1024px) {
      flex-direction: row;
      gap: 1.25rem;
    }
  }

  .dropdown {
    position: relative;
  }

  .dropdownButton {
    display: flex;
    align-items: center;
  }

  .dropdownSvg {
    width: 0.75rem;
    height: 0.75rem;
  }

  .dropdownItemsRoot {
    position: relative;

    &.hidden {
      display: none;
    }
  }

  dropdownItems {
    position: absolute;
  }

  ul {
    list-style: none;
  }
</style>
